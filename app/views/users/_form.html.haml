#newuserform
  = form_for @user, :html => {:multipart => true}, :remote => true do |f|
    = f.label :name
    = f.text_field :name, :autofocus => true
    = f.label :email
    = f.text_field :email
    = f.label :image
    = f.file_field :image
    = f.label :address
    = f.text_field :address
    = f.label :phone
    = f.text_field :phone
    = f.label :gender
    = f.text_field :gender
    = f.label :password
    = f.password_field :password
    = f.label :password_confirmation
    = f.password_field :password_confirmation
    %br
    = link_to('Cancel', '#', :'data-close-form' => true, :class => 'btn btn-danger')
    = f.submit 'Create Account', :class => 'btn btn-inverse'


